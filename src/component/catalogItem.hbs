<div class='card'>
  <img src='{{img}}' class='card-img-top' alt='{{name}}' />
  <div class='card-title ps-3 pt-2'>
    <div>
      {{#if isHot}}
        <span
          class='badge bg-warning rounded-pill me-2 p-2 px-3'
        >HOT!</span>
      {{/if}}
      {{#if isNew}}
        <span
          class='badge bg-primary rounded-pill p-2 px-3'
        >Нове</span>
      {{/if}}
    </div>
    <div>
      {{#if isFast}}
        <div class='mt-3'>
          <span class='badge text-bg-success p-2'>Швидка
            доставка</span>
        </div>

      {{/if}}
      {{#if isFree}}
        <div class='mt-2'>
          <span
            class='badge text-bg-secondary p-2'
          >Безкоштовна доставка</span>
        </div>
      {{/if}}
    </div>
  </div>
  <div class='card-body'>
    <h5 class='card-title mb-0'>{{name}}</h5>
    <div class='card-text my-3'>{{review.amount}}
      {{review.text}}</div>
    <h4 class='mb-3'>{{price}}</h4>
    <div class='mb-3'>{{delivery}}</div>
    {{#each buttons}}
      {{#if isPrimary}}
        <div>
          <a
            href='{{link}}'
            class='btn btn-primary'
          >{{text}}</a></div>

      {{/if}}
      {{#if isSecondary}}
        <div class='my-2 mb-3'>
          <a
            href='{{link}}'
            class='btn btn-secondary'
          >{{text}}</a>
        </div>

      {{/if}}
    {{/each}}
    <div>
      <ul>
        {{#each characteristics}}
          <li class='mb-1'>{{title}}:
            {{value}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>