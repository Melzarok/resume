{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
	{{#with main}}
		<main>
			<section>
			<div>
				{{> title data='Work history' big=true}}
			</div>
			<div>
				<ul>
					{{#each works}}
						<li>
							<div>{{position}}</div>
							<br />
							<div>
								{{duration.from}} - 
								{{#if duration.to}} 
									{{duration.to}} 
								{{else}} 
									(Досі процюємо) 
								{{/if}}
							</div>
							<br />
							<div>
								{{#if company.url}}
									{{> link text=company.name href=company.url blank=true noLine=true}}
								{{else}}	
								 	<b>{{company.name}}</b> 
								{{/if}}	
							<br />
							<br />
							<div><strong>Project: ({{projectAmount}})</strong></div>
							<br>
							<ul>
								{{#each project}}
									<li>
										<div>{{> link text=name href=url blank=true noLine=true}}</div>
										<br />
										<div><p>{{about}}</p></div>
										<br />
										<div><em>Project stacks</em>({{stackAmount}})</div>
										<br>
										{{#each stacks}}
											<div>{{name}}</div>
										{{/each}}
										<br>
										<div><em>Project awards</em></div>
										<br>
										{{#each awards}}
											<div>{{name}}</div>
										{{/each}}
									</li>
								{{/each}}
							</ul>
						</li>
					{{/each}}
				</ul>
			</div>
			</section>
		</main>
  {{/with}}
</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}